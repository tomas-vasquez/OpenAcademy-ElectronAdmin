{
  "name": "cra-electron",
  "description": "CRA + Electron sitting in a tree",
  "author": "tomas vasquez <tomasdetloging@gmail.com>",
  "version": "0.3.0",
  "private": true,
  "dependencies": {
    "axios": "^0.20.0",
    "classname": "0.0.0",
    "cloudinary-react": "^1.6.8",
    "cross-env": "6.0.2",
    "electron-is-dev": "1.1.0",
    "electron-log": "^3.0.8",
    "font-awesome": "^4.7.0",
    "highlight.js": "^10.2.0",
    "mongoose": "^5.10.3",
    "node-sass": "^5.0.0",
    "react": "16.12.0",
    "react-dom": "^16.8.6",
    "react-drag-listview": "^0.1.7",
    "react-quill": "^1.3.5",
    "react-router-dom": "^5.2.0",
    "reactstrap": "^8.5.1",
    "sweetalert2": "^10.0.1",
    "update-electron-app": "^1.2.0",
    "uuidv4": "^6.2.6"
  },
  "devDependencies": {
    "@types/react": "16.9.19",
    "concurrently": "4.1.2",
    "electron": "6.0.11",
    "electron-builder": "^21.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-flowtype": "3.13.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "prettier": "^1.4.4",
    "react-scripts": "^3.4.1",
    "wait-on": "3.3.0"
  },
  "build": {
    "publish": {
      "provider": "github"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "cross-env BROWSER=none PORT=3005 react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-start": "electron .",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3005 && electron .\"",
    "compile-sass": "node-sass src/assets/scss/black-dashboard-react.scss src/assets/css/black-dashboard-react.min.css --output-style compressed"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
